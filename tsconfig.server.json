{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "types": ["node", "express", "mongoose"]
  },
  "include": ["./src/server/**/*"],
  "exclude": ["./src/client/**/*", "node_module"]
}
