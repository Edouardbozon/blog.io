{
  "restartable": "rs",
  "watch": ["src/**/*.ts"],
  "ext": "ts",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "src/**/*.spec.ts",
    "src/client/**/*"
  ],
  "exec": "ts-node --pretty --project tsconfig.server.json --require dotenv/config ./src/server/index.ts dotenv_config_path=.env"
}
