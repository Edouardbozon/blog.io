{
  "name": "codamit",
  "version": "1.0.0",
  "description": "My web page",
  "main": "index.js",
  "scripts": {
    "start": "npm run start:api:prod",
    "watch": "concurrently \"webpack-dev-server --inline --hot\" \"nodemon --config nodemon.server.json\"",
    "build:client": "webpack ---progress --config=webpack.production.config.js --mode production",
    "start:api:dev": "ts-node --require dotenv/config src/server/index.ts --config tsconfig.server.json dotenv_config_path=./.env",
    "start:api:prod": "ts-node --require dotenv/config src/server/index.ts --config tsconfig.server.json dotenv_config_path=./.env.production",
    "deploy:all": "concurrently \"npm run update:client\" \"npm run update:api\"",
    "deploy:api": "now -A now.api.json && now scale api.codamit.com bru1 1",
    "deploy:client": "npm run build:client && now -A now.client.json",
    "ln:api": "now ln -A now.api.json && now rm codamit-api --safe --yes",
    "ln:client": "now ln -A now.client.json",
    "update:client": "npm run deploy:client && npm run ln:client",
    "update:api": "npm run deploy:api && npm run ln:api"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Edouardbozon/codamit.git"
  },
  "author": "edouardbozon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Edouardbozon/codamit/issues"
  },
  "homepage": "https://github.com/Edouardbozon/codamit#readme",
  "dependencies": {
    "@akanass/rx-http-request": "^3.1.0",
    "@marblejs/core": "^1.2.1",
    "@marblejs/middleware-body": "^1.2.1",
    "@marblejs/middleware-joi": "^1.2.1",
    "@marblejs/middleware-jwt": "^1.2.1",
    "@marblejs/middleware-logger": "^1.2.1",
    "@polymer/lit-element": "^0.6.5",
    "@sentry/browser": "^4.2.4",
    "@webcomponents/webcomponentsjs": "^2.2.1",
    "anchorme": "^1.1.2",
    "bcrypt": "^3.0.2",
    "bulma": "^0.7.2",
    "chalk": "^2.4.1",
    "date-fns": "^1.29.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "lit-html": "^1.0.0-rc.1",
    "mongoose": "^5.3.3",
    "prismjs": "^1.15.0",
    "prouter": "^8.1.3",
    "rxjs": "^6.3.3",
    "showdown": "^1.8.7",
    "simplemde": "^1.11.2",
    "typegoose": "^5.4.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.16.0",
    "@types/joi": "^13.6.1",
    "@types/mongoose": "^5.2.19",
    "@types/node": "^10.11.7",
    "@types/prismjs": "^1.9.0",
    "@types/showdown": "^1.7.5",
    "@types/simplemde": "^1.11.7",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.7",
    "now": "^12.0.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "svg-inline-loader": "^0.8.0",
    "ts-loader": "^5.3.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
