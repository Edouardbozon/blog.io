{
  "name": "codamit.com",
  "version": "1.0.0",
  "description": "Tech Blog",
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 1.7.0",
    "npm": ">= 5.0.0"
  },
  "scripts": {
    "start": "lerna run start --parallel --stream",
    "build": "lerna run build",
    "lerna": "lerna"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Edouardbozon/codamit.git"
  },
  "author": "edouardbozon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Edouardbozon/codamit/issues"
  },
  "homepage": "https://github.com/Edouardbozon/codamit#readme",
  "lint-staged": {
    "src/**/*.(ts|tsx|js|jsx)": [
      "npm run lint",
      "prettier --write",
      "git add"
    ],
    "src/**/*.(html|scss|json)": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@typescript-eslint/parser": "1.9.0",
    "nodemon": "1.19.1",
    "eslint": "5.16.0",
    "husky": "2.4.0",
    "lerna": "3.14.1",
    "lint-staged": "8.2.0",
    "now": "15.4.0",
    "prettier": "1.18.2",
    "typescript": "3.5.1"
  }
}
