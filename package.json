{
  "name": "codamit.com",
  "version": "1.0.0",
  "description": "Tech Blog",
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.0.0"
  },
  "scripts": {
    "install": "lerna exec npm install --parallel",
    "start": "lerna run start --parallel --stream",
    "build": "lerna run build:docker --parallel --stream",
    "push": "lerna run push --parallel --stream",
    "release": "lerna run release --parallel --stream",
    "prerelease": "npm run push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Edouardbozon/codamit.git"
  },
  "author": "Edouard Bozon <bozonedouard@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Edouardbozon/codamit/issues"
  },
  "homepage": "https://github.com/Edouardbozon/codamit#readme",
  "lint-staged": {
    "**/*.(ts|tsx|js|jsx)": [
      "eslint \"./packages/**/src/*.ts\"",
      "prettier --write",
      "git add"
    ],
    "**/*.(html|scss|json)": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@typescript-eslint/parser": "1.10.2",
    "eslint-plugin-lit": "1.0.0",
    "eslint": "5.16.0",
    "husky": "2.4.1",
    "lerna": "3.15.0",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "typescript": "3.5.2"
  }
}
